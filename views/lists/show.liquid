{% layout "layout.liquid" %} {% block content %}

<article>
  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th scope="col">Check</th>
        <th scope="col">Title</th>
        <th scope="col">Type</th>
        <th scope="col">Location</th>
        <th scope="col">Description</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">
          {% if list.check == true %} Comeplete {% else %} Incomplete {% endif
          %}
        </th>
        <td>
          {{ list.title }}
        </td>
        <td>{{ list.type }}</td>
        <td>{{ list.location }}</td>
        <td>{{ list.description }}</td>
      </tr>
    </tbody>
  </table>
  <a href="/lists/{{ list._id }}/edit"
    ><button type="submit" class="btn btn-secondary">EDIT</button></a
  >
  <form action="/lists/{{ list._id }}?_method=DELETE" method="post">
    <input class="btn btn-danger" type="submit" value="DELETE" />
  </form>
  <a href="/lists"
    ><button type="submit" class="btn btn-outline-dark">BACK</button></a
  >
</article>

{% endblock %}
